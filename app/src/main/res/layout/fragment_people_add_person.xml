<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_margin="@dimen/activity_vertical_margin"
    >
    <ImageView
        android:id="@+id/fragment_people_add_iv_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_profile"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
    <EditText
        android:id="@+id/fragment_people_add_ed_personname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Person name"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:background="@drawable/boder_edittext"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
    <EditText
        android:id="@+id/fragment_people_add_ed_department"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Department"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:background="@drawable/boder_edittext"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
    <EditText
        android:id="@+id/fragment_people_add_ed_note"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Note"
        android:textColor="@color/colorPrimary"
        android:gravity="center"

        android:background="@drawable/boder_edittext"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
</LinearLayout>
